# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8

[*.{h,hpp,c,cpp,cxx,md,fbs,qss}]
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[{Makefile,CMakeLists.txt}]
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
